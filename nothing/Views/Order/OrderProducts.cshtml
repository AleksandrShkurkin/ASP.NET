@model List<Product>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<form asp-action="OrderProducts" method="post">
    <div asp-validation-summary="All"></div>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <label asp-for="@Model[i].Name">Pizza title</label>
            <input asp-for="@Model[i].Name" />
            <span asp-validation-for="@Model[i].Name"></span>

            <label asp-for="@Model[i].Quantity">Amount</label>
            <input asp-for="@Model[i].Quantity" type="number" min="1" />
            <span asp-validation-for="@Model[i].Quantity"></span>
        </div>
        <hr />
    }
    <button type="submit">Finalize</button>
</form>