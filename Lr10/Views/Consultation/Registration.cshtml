@model ConsultationForm

<h1>Registration for consultation</h1>

<form asp-action="Registration" asp-controller="Consultation" method="post">
    <div>
        <label for="FullName">Name and surname:</label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <label for="Email">Email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label for="ConsultationDate">Date of consultation:</label>
        <input asp-for="ConsultationDate" type="date" />
        <span asp-validation-for="ConsultationDate"></span>
    </div>
    <div>
    <label for="Product">Product:</label>
    <select asp-for="Product">
        <option value="">Choose product</option>
        <option value="JavaScript">JavaScript</option>
        <option value="C#">C#</option>
        <option value="Java">Java</option>
        <option value="Python">Python</option>
        <option value="Basics">Basics</option>
    </select>
    <span asp-validation-for="Product"></span>
</div>
    <button type="submit">Register</button>
</form>